{
  "name": "hippo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "oxlint src/",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@vueuse/core": "^11.3.0",
    "chart.js": "^4.5.0",
    "date-fns": "^2.30.0",
    "decimal.js": "^10.6.0",
    "pinia": "^2.3.1",
    "vue": "^3.5.12",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^24.0.13",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.21",
    "fast-check": "^4.2.0",
    "husky": "^9.1.7",
    "jsdom": "^20.0.3",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "oxlint": "^1.6.0",
    "postcss": "^8.5.6",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.4.17",
    "typescript": "~4.7.4",
    "vite": "^7.0.4",
    "vitest": "^0.26.3",
    "vue-tsc": "^1.8.27"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
