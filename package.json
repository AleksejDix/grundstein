{
  "name": "hippo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && npm run build-only",
    "preview": "vite preview",
    "test:unit": "vitest run --project=unit",
    "test:unit:watch": "vitest --project=unit",
    "test:components": "vitest run --project=components",
    "test:components:watch": "vitest --project=components",
    "test:browser": "vitest run --project=browser",
    "test:browser:watch": "vitest --project=browser",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "oxlint src/",
    "test": "vitest run --project=unit --project=components",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:ui": "vitest --coverage --ui",
    "test:staged": "vitest related --run",
    "analyze": "vite-bundle-analyzer dist",
    "build:analyze": "npm run build && npm run analyze",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "npm run type-check && npm run test:staged"
  },
  "dependencies": {
    "@vueuse/core": "^13.5.0",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.12",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "fast-check": "^4.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.6.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-bundle-analyzer": "^1.1.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ],
    "*.{ts,tsx,vue}": [
      "bash -c 'npm run type-check'"
    ],
    "src/**/*.{test,spec}.{js,jsx,ts,tsx}": [
      "vitest related --run"
    ]
  }
}
