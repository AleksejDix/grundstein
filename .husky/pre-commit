#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint
echo "📋 Checking ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint failed! Please fix linting errors before committing."
  echo "💡 Run 'npm run lint' to see the errors."
  exit 1
fi

# Run type check
echo "📋 Checking TypeScript..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript check failed! Please fix type errors before committing."
  echo "💡 Run 'npm run type-check' to see the errors."
  exit 1
fi

# Run tests
echo "📋 Running tests..."
npm test -- --run
if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Please fix failing tests before committing."
  echo "💡 Run 'npm test' to see the failing tests."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
