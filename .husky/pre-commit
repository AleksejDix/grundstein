#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint
echo "ğŸ“‹ Checking ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed! Please fix linting errors before committing."
  echo "ğŸ’¡ Run 'npm run lint' to see the errors."
  exit 1
fi

# Run type check
echo "ğŸ“‹ Checking TypeScript..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed! Please fix type errors before committing."
  echo "ğŸ’¡ Run 'npm run type-check' to see the errors."
  exit 1
fi

# Run tests
echo "ğŸ“‹ Running tests..."
npm test -- --run
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed! Please fix failing tests before committing."
  echo "ğŸ’¡ Run 'npm test' to see the failing tests."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
