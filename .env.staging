# Staging Environment
NODE_ENV=production
VITE_APP_ENV=staging

# Application Settings
VITE_APP_NAME=Grundstein (Staging)
VITE_APP_VERSION=1.0.0-staging
VITE_APP_DESCRIPTION="Swiss & German Mortgage Portfolio Management (Staging)"

# API Configuration
VITE_API_BASE_URL=https://api-staging.grundstein.app
VITE_API_TIMEOUT=20000

# Feature Flags
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Development Settings
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=true

# Regional Settings
VITE_DEFAULT_LOCALE=de-CH
VITE_DEFAULT_CURRENCY=CHF
VITE_SUPPORTED_MARKETS=CH,DE

# Security
VITE_CSP_NONCE=__CSP_NONCE__