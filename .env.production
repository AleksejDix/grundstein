# Production Environment
NODE_ENV=production
VITE_APP_ENV=production

# Application Settings
VITE_APP_NAME=Grundstein
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Swiss & German Mortgage Portfolio Management"

# API Configuration
VITE_API_BASE_URL=https://api.grundstein.app
VITE_API_TIMEOUT=15000

# Feature Flags
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Development Settings
VITE_DEV_TOOLS=false
VITE_DEBUG_MODE=false

# Regional Settings
VITE_DEFAULT_LOCALE=de-CH
VITE_DEFAULT_CURRENCY=CHF
VITE_SUPPORTED_MARKETS=CH,DE

# Security
VITE_CSP_NONCE=__CSP_NONCE__